.nested-fields
  .field
    = f.label :task
    = f.text_field :task
  .field
    = f.label :status
    = f.select :status, options_for_select(TODO_STATUS, f.object&.status || 'ToDo')
  .field
    = f.label :user
    = f.select :user_id, options_for_select(User.developers.pluck(:first_name, :id), f.object&.user&.id)
  = link_to_remove_association "remove task", f, data: { turbolinks: false } 
